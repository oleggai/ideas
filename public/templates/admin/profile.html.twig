{% extends "admin.html.twig" %}

{% block back %}
    <a href="{{ url }}admin/users">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
{% endblock %}

{% block content %}
    {% for error in errors %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            <strong>Error!</strong> {{ error }}
        </div>
    {% endfor %}
    {% for success in successes %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            <strong>Success!</strong> {{ success }}
        </div>
    {% endfor %}
    <form method="post" action="{{ url }}users/update" class="form-horizontal" role="form">
        <div class="form-group">
            <label for="input-login" class="col-sm-2 control-label">{{ lang.user.login }}</label>
            <div class="col-sm-10">
                <input value="{{ user.login }}" type="text" required="" name="login" class="form-control" id="input-login" placeholder="{{ lang.user.login }}">
            </div>
        </div>
        <div class="form-group">
            <label for="input-password" class="col-sm-2 control-label">{{ lang.user.password }}</label>
            <div class="col-sm-10">
                <input type="password" name="password" class="form-control" id="input-password" placeholder="{{ lang.user.password }}">
            </div>
        </div>
        <div class="form-group">
            <label for="input-name" class="col-sm-2 control-label">{{ lang.user.name }}</label>
            <div class="col-sm-10">
                <input value="{{ user.name }}" type="text" required="" name="name" class="form-control" id="input-name" placeholder="{{ lang.user.name }}">
            </div>
        </div>
        <div class="form-group">
            <label for="input-surname" class="col-sm-2 control-label">{{ lang.user.surname }}</label>
            <div class="col-sm-10">
                <input value="{{ user.surname }}" type="text" required="" name="surname" class="form-control" id="input-surname" placeholder="{{ lang.user.surname }}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="hidden" value="{{ user.id }}" name="id">
                <button type="submit" class="btn btn-default">{{ lang.user.btnUpdate }}</button>
            </div>
        </div>
    </form>
{% endblock %}